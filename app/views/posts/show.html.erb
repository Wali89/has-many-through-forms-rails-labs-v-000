<h1><%= @post.title %> </h1>
<p><%= @post.content %> </p>
<h3>Categories:</h3>
<ul><% @post.categories.each do |c| %> 
  <%= link_to c.name, category_path(c) %>
<% end %>
</ul>
<h3>Comments:</h3>

<ul><% @post.comments.each do |comment| %>
  <li><%= comment.content %></li>
<% end %> </ul>

<div class=comment-content>
  <%= @comments %>
</div>
<%= form_for @comments do |f| %>
  <%= f.label "Content" %>
  <%= f.text_area :comment_content %>
  <%= f.collection_check_boxes :user_ids, User.all, :id, :name %>
  <%= f.fields_for :users, post.users.build do |users_fields| %>
    <%= users_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
